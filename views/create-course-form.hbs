<h1>Create a new course</h1>

<div class="create-course--ctn">
    <form action="/courses/add" method="POST" enctype="multipart/form-data">
        {{#if msg}}
        <p class="msg {{msg.status}}">{{msg.txt}}</p>
        {{/if}}

        <div class="form-top">
            <div class="select">
                <select name="category" id="category" class="select" c>
                    <option value="" disabled selected>Choose a category</option>
                    {{#each categories}}
                    <option value="{{this._id}}">{{this.category}}</option>
                    {{/each}}
                </select>
            </div>
            <div class="box">
                <input type="file" name="image" id="file-1" class="inputfile inputfile-1"
                    data-multiple-caption="{count} files selected" multiple required />
                <label for="file-1"><svg xmlns="http://www.w3.org/2000/svg" width="20" height="17" viewBox="0 0 20 17">
                        <path
                            d="M10 0l-5.2 4.9h3.3v5.1h3.8v-5.1h3.3l-5.2-4.9zm9.3 11.5l-3.2-2.1h-2l3.4 2.6h-3.5c-.1 0-.2.1-.2.1l-.8 2.3h-6l-.8-2.2c-.1-.1-.1-.2-.2-.2h-3.6l3.4-2.6h-2l-3.2 2.1c-.4.3-.7 1-.6 1.5l.6 3.1c.1.5.7.9 1.2.9h16.3c.6 0 1.1-.4 1.3-.9l.6-3.1c.1-.5-.2-1.2-.7-1.5z" />
                    </svg> <span>Choose a picture&hellip;</span></label>
            </div>
        </div>

        <div>
            <label for="title">Title</label>
            <input id="title" type="text" name="title" placeholder="Title" class="form-input" required>
        </div>

        <div>
            <label for="description">Description</label>
            <input id="description" type="text" name="description" placeholder="Description" class="form-input"
                required>
        </div>

        <div>
            <label for="price">Price</label>
            <input id="price" type="number" name="price" placeholder="â‚¬" min="10" class="form-input" required>
        </div>

        <div>
            {{!-- no date in the past --}}
            <label for="date">Date</label>
            <input type="hidden" id="timezone" name="timezone" value="+02:00">
            <input id="date" type="datetime-local" name="date" class="form-input" min="30/04/2020" required>
        </div>

        <div>
            <label for="minPeople">Min. attendees</label>
            <input id="minPeople" type="number" name="minPeople" placeholder="Minimum 5" min="0" "500"
                class="form-input" required>
        </div>

        <div>
            <label for="maxPeople">Max. attentees</label>
            <input id="maxPeople" type="number" name="maxPeople" placeholder="Maximum 100" min="0" max="500"
                class="form-input" required>
        </div>

        <div>
            <label for="place">Location/link</label>
            <input id="location" type="string" name="place" placeholder="Link or location for the event"
                class="form-input" required>
        </div>

        <button class="base-btn">Add this course</button>
    </form>
</div>