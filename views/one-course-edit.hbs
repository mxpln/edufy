<h2 class="h1-vlad">Edit this course</h2>

<form action="/courses/{{course._id}}/edit" method="POST" enctype="multipart/form-data" class="form-profile-edit">

    {{#if msg}}
    <p class="msg {{msg.status}}">{{msg.txt}}</p>
    {{/if}}
    <div class="form-profile-el">
        <div class="profile-edit-box">
            {{!-- <img src="{{course.image}}" alt="img" /> --}}
            <input type="file" name="image" id="file-edit" class="inputfile inputfile-1"
                data-multiple-caption="{count} files selected" multiple />
            <label for="file-1"><svg xmlns="http://www.w3.org/2000/svg" width="20" height="17" viewBox="0 0 20 17">
                    <path
                        d="M10 0l-5.2 4.9h3.3v5.1h3.8v-5.1h3.3l-5.2-4.9zm9.3 11.5l-3.2-2.1h-2l3.4 2.6h-3.5c-.1 0-.2.1-.2.1l-.8 2.3h-6l-.8-2.2c-.1-.1-.1-.2-.2-.2h-3.6l3.4-2.6h-2l-3.2 2.1c-.4.3-.7 1-.6 1.5l.6 3.1c.1.5.7.9 1.2.9h16.3c.6 0 1.1-.4 1.3-.9l.6-3.1c.1-.5-.2-1.2-.7-1.5z" />
                </svg> <span>Choose a picture&hellip;</span></label>

        </div>
        <div class="profile-form-input"></div>
        <div>
            {{!-- <label for="title">title</label> --}}
            <input class="form-input" id="title" type="text" name="title" placeholder="Title" value='{{course.title}}'>
        </div>

        <div>
            {{!-- <label for="description">Description</label> --}}
            <input class="form-input" id="description" type="text" name="description" placeholder="Description"
                value="{{course.description}}">
        </div>

        <div>
            {{!-- <label for="price">Price</label> --}}
            <input class="form-input" id="price" type="number" name="price" placeholder="â‚¬" min="10"
                value='{{course.price}}'>
        </div>

        <div>
            {{!-- <label for="date">Date</label> --}}

            <input class="form-input" id="date" type="datetime-local" min="{{formatDateForInput course.date "min"}}"
                name="date" value="{{formatDateForInput course.date "current"}}">
        </div>

        {{!-- <div>
            <  label for="time">Time</label>
            <input id="time" type="time" name="time" value={{course.time}}>
            </div> --}}

        <div>
            {{!-- <label for="minPeople">Min Attentees</label> --}}
            <input class="form-input" id="minPeople" type="number" name="minPeople" placeholder="Minimum attendees 5"
                min="0" "500" value={{course.minPeople}}>
        </div>

        <div>
            {{!-- <label for="maxPeople">Max Attentees</label> --}}
            <input class="form-input" id="maxPeople" type="number" name="maxPeople" placeholder="Maximum attendees 100"
                min="0" max="500" value="{{course.maxPeople}}">
        </div>

        <div>
            {{!-- <label for="place">Location/link</label> --}}
            <input class="form-input" id="location" type="string" name="place"
                placeholder="Link or location for the event" value="{{course.place}}">
        </div>

        <div>
            {{!-- <label for="category">Category</label> --}}
            <select class="form-input" name="category" id="category" class="select">
                <option value="{{course.category}}" disabled selected>{{course.category.category}}</option>
                {{#each category}}
                <option value="{{this._id}}">{{this.category}}</option>
                {{/each}}
            </select>
        </div>

    </div>
    </div>
    <button class="base-btn">Update this course</button>
</form>