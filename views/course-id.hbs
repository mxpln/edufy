<h1>Course index id</h1>

<div>
    <img src="{{course.image}}" alt="IMG">
    <ul>
        <li>
            <h3>Title: {{course.title}}</h3>
        </li>
        <li>
            <p>Description: {{course.description}}</p>
        </li>
        <li>
            <p>DATE: {{course.date}}</p>
        </li>
        <li>
            <p>PRICE: {{course.price}}$</p>
        </li>
        <li>
            <p>CATEGORY: {{course.category.category}}</p>
        </li>
        {{#each participants}}
        <li>
            <p>Participants :{{this.name}}</p>
        </li>
        {{/each}}
        <li>
            <p>Place :{{course.place}}</p>
        </li>
        <li>
            <p>Min people: {{course.minPeople}}</p>
        </li>
        <li>
            <p>Max people : {{course.maxPeople}}</p>
        </li>
    </ul>
    {{#if hasCourse}}
    <form action="/courses/{{course._id}}/remove" method="POST">
        <button>Remove this course</button>
    </form>
    {{else}}
    <form action="/courses/{{course._id}}/add" method="POST">
        <button>Add this course</button>
    </form>
    {{/if}}

</div>